<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.lyh.mapper.SysRolePermissionMapper">

    <!-- 通过角色ID删除所有关联权限 -->
    <delete id="deleteByRoleId">
        DELETE FROM sys_role_permission
        WHERE role_id = #{roleId}
    </delete>

    <!-- 通过权限ID删除所有关联角色 -->
    <delete id="deleteByPermId">
        DELETE FROM sys_role_permission
        WHERE perm_id = #{permId}
    </delete>

    <!-- 批量添加角色-权限关联 -->
    <insert id="batchInsert">
        INSERT INTO sys_role_permission (role_id, perm_id, create_time)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.roleId}, #{item.permId}, NOW())
        </foreach>
    </insert>

    <!-- 通过角色ID查询权限ID列表 -->
    <select id="selectPermIdsByRoleId" resultType="java.lang.Long">
        SELECT perm_id FROM sys_role_permission
        WHERE role_id = #{roleId}
    </select>

    <!-- 通过权限ID查询角色ID列表 -->
    <select id="selectRoleIdsByPermId" resultType="java.lang.Long">
        SELECT role_id FROM sys_role_permission
        WHERE perm_id = #{permId}
    </select>

</mapper>