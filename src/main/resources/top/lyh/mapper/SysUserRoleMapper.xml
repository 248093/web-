<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.lyh.mapper.SysUserRoleMapper">

    <!-- 通过用户ID删除所有关联角色 -->
    <delete id="deleteByUserId">
        DELETE FROM sys_user_role
        WHERE user_id = #{userId}
    </delete>

    <!-- 通过角色ID删除所有关联用户 -->
    <delete id="deleteByRoleId">
        DELETE FROM sys_user_role
        WHERE role_id = #{roleId}
    </delete>

    <!-- 批量添加用户-角色关联 -->
    <insert id="batchInsert">
        INSERT INTO sys_user_role (user_id, role_id, create_time)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.userId}, #{item.roleId}, NOW())
        </foreach>
    </insert>

    <!-- 通过用户ID查询角色ID列表 -->
    <select id="selectRoleIdsByUserId" resultType="java.lang.Long">
        SELECT role_id FROM sys_user_role
        WHERE user_id = #{userId}
    </select>

    <!-- 通过角色ID查询用户ID列表 -->
    <select id="selectUserIdsByRoleId" resultType="java.lang.Long">
        SELECT user_id FROM sys_user_role
        WHERE role_id = #{roleId}
    </select>

</mapper>